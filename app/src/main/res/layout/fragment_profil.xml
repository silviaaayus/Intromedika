<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimaryVariant"
    android:id="@+id/relatif"
    tools:context=".Profil.ProfilFragment">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="?colorPrimaryVariant">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgProfil"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_gravity="center"
            android:src="@drawable/female"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/namapasienProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:id="@+id/nikprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />




    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/imgLogin"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:layout_marginTop="-0dp">

        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/login">
            <TextView
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/comfortaa_bold"/>

            <LinearLayout
                android:id="@+id/lineEdtProfil"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_edit_24"
                    app:tint="@color/black" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtProfil"
                    android:text="Edit Profil"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linePass"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_vpn_key_24"
                    app:tint="@color/black" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/change"
                    android:text="Edit Password"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/black"/>

            </LinearLayout>




        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnlogout"
            android:textStyle="bold"
            android:text="Logout Account"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="?colorPrimaryVariant"/>



    </LinearLayout>





</RelativeLayout>
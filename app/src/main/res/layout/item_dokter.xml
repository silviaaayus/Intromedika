<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_hotel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/imgDokter"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                tools:src="@drawable/ic_android"
               />

            <LinearLayout
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/namaDokter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dr. Anin "
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                   />

                <TextView
                    android:id="@+id/namaPoli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poli Gigi"
                    android:textColor="?colorPrimaryVariant"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textSize="@dimen/_10sdp"
                  />

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_80sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgjam"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_access_time_24"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/jamAwal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10.00"
                        android:textColor="?colorPrimaryVariant"
                        android:fontFamily="@font/comfortaa"
                        android:textSize="@dimen/_10sdp"
                        />
                    <TextView
                        android:id="@+id/jamAkhir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10.00"
                        android:textColor="?colorPrimaryVariant"
                        android:fontFamily="@font/comfortaa"
                        android:textSize="@dimen/_10sdp"
                        />
                </LinearLayout>


            </LinearLayout>




        </LinearLayout>


    </androidx.cardview.widget.CardView>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_baseline_close_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendaftaran Pasien"
            android:textStyle="bold"
            android:textColor="?colorPrimaryVariant"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <EditText
            android:fontFamily="@font/comfortaa"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/edt_namaPasienbaru"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login"
            android:hint="Nama Lengkap"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>

        <EditText
            android:fontFamily="@font/comfortaa"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/edt_nikPasienbaru"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login"
            android:hint="NIK"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>

        <TextView
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/comfortaa"
            android:id="@+id/ttl_new"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login"
            android:hint="Tanggal Lahir"
            android:gravity="center_vertical"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:layout_marginBottom="10dp">
            <Spinner
                android:textSize="@dimen/_12sdp"
                android:id="@+id/edtJekel_new"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35sdp"
                android:hint="Jenis Kelamin"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:layout_marginBottom="10dp">
            <Spinner
                android:id="@+id/kategori_pasien_new"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35sdp"
                android:hint="Kategori Pasien"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                />
        </RelativeLayout>
        <EditText
            android:fontFamily="@font/comfortaa"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/edt_alamatpasien"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login"
            android:hint="Alamat Pasien"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>
        <EditText
            android:fontFamily="@font/comfortaa"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/edt_nohp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login"
            android:hint="No HP"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>
        <Button
            android:fontFamily="@font/comfortaa"
            android:id="@+id/btnpasienbaru"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="?colorPrimaryVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Ambil No Antrian"/>




    </LinearLayout>


</RelativeLayout>



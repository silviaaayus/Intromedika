<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorPrimaryVariant"
    tools:context=".Profil.EditProfilActivity">


    <LinearLayout
        android:padding="@dimen/_20sdp"
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/kotak"
            android:src="@drawable/ic_baseline_arrow_back_24"/>


        <TextView
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profil "
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_below="@id/linear2"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:layout_marginTop="20dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp">

            <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/comfortaa_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NIK"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:textColor="@color/black"
                        android:textColorHint="#7C7777"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/comfortaa"
                        android:id="@+id/edtProfil_Nik"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/login"
                        android:padding="@dimen/_5sdp"/>

                <TextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pasien"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:textColor="@color/black"
                    android:textColorHint="#7C7777"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/comfortaa"
                    android:id="@+id/edtProfil_Nama"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/login"
                    android:padding="@dimen/_5sdp"/>
                <TextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir Pasien"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/comfortaa"
                    android:id="@+id/edtProfil_ttl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/login"
                    android:padding="@dimen/_5sdp"/>
                <TextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin Pasien"
                    android:textColor="@color/black"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login"
                   >

                    <Spinner
                        android:textColor="@color/black"
                        android:id="@+id/edtProfil_jekel"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:hint="Jenis Kelamin"
                        android:fontFamily="@font/comfortaa"
                       android:padding="@dimen/_5sdp"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No HP Pasien"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/comfortaa"
                    android:id="@+id/edtProfil_nohp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/login"
                    android:padding="@dimen/_5sdp"/>

                <TextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Pasien"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/comfortaa"
                    android:id="@+id/edtProfil_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/login"
                    android:padding="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/btnEdtProfil"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="?colorPrimaryVariant"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="Edit Profil "
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>
</RelativeLayout>
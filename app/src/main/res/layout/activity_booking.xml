<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimaryVariant"
    tools:context=".Booking.BookingActivity">


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/kotak"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:id="@+id/tanggalAntrian"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 September 2021"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgjam"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_access_time_24"
                app:tint="@color/white" />

            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:id="@+id/jambukapoli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00:00"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/jamtutuppoli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00:00"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/main_shape"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/total"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?colorPrimaryVariant"/>
        </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/main_shape"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proses"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/proses"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?colorPrimaryVariant"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/main_shape"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antrian"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/antrian"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?colorPrimaryVariant"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/linear1"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:layout_marginTop="-10dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Pasien:"
                android:textColor="?colorPrimaryVariant"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/comfortaa_bold"/>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rd_PilihPasien">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orang Lain"
                            android:id="@+id/rd_PasienBaru"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diri Sendiri"
                            android:id="@+id/rd_PasienLama"/>
                    </RadioGroup>

                    <FrameLayout
                        android:id="@+id/bottom_sheet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />

                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>